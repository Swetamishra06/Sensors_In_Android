<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProximityActivity">


    <TextView
        android:id="@+id/textViewA"
        android:layout_width="266dp"
        android:layout_height="43dp"
        android:text="Proximity Sensor"
        android:textAlignment="center"
        android:textColor="@color/voilet"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/textViewB"
        android:layout_width="300dp"
        android:layout_height="163dp"
        android:padding="10dp"
        android:text="Detects the presence of nearby objects.\n\n ■ Equipped with a proximity sensor, your device automatically turns off the screen when it detects that it is close to your ear.\n\n ■ This helps prevents possible misoperations."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167" />

    <TextView
        android:id="@+id/textViewC"
        android:layout_width="309dp"
        android:layout_height="27dp"
        android:text="@string/how_it_works"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.396" />

    <TextView
        android:id="@+id/textViewD"
        android:layout_width="317dp"
        android:layout_height="193dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="90dp"
        android:padding="20dp"
        android:text="It is generally located at the top of the screen and near the receiver.\n  ■ It detects the distance btw an object and the device by calculating changes in the infrared light signals it receives.\n  ■ The working range of a proximity sensor is generally 10cm. "
        app:layout_constraintBottom_toTopOf="@+id/proxy2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="448dp"
        android:background="@color/black"
        android:padding="17dp"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/light"
        android:layout_width="275dp"
        android:layout_height="61dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="32dp"
        android:background="@color/voilet"
        android:text="check"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewD"
        app:layout_constraintVertical_bias="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>